// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id Int @id @map("_id")
  title String
  year Int
  quality String
  description String?
  rating Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  posters Poster[]
  backdrops Backdrop[]
}

model Poster {
  id String @id @default(uuid()) @map("_id")
  src String
  width Int? @default(0)
  height Int? @default(0)
  movieId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  movie Movie @relation(fields: [movieId], references: [id])
}

model Backdrop {
  id String @id @default(uuid()) @map("_id")
  src String
  width Int? @default(0)
  height Int? @default(0)
  movieId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  movie Movie @relation(fields: [movieId], references: [id])
}