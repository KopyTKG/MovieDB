// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id Int @id @map("_id")
  imdb_id String
  title String
  year Int
  quality String
  description String?
  rating Float?
  posters Json[]
  backdrops Json[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}