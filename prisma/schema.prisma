generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

type MovieBackdrops {
  src String
}

type MoviePosters {
  src String
}

model Genres {
  id   Int    @id @map("_id")
  name String
}

model Movie {
  id          Int              @id @map("_id")
  backdrops   MovieBackdrops[]
  createdAt   DateTime         @db.Date
  description String
  genres      Int[]
  imdb_id     String
  posters     MoviePosters[]
  quality     String
  rating      Float
  tagline     String
  title       String
  updatedAt   DateTime         @db.Date
  year        Int
}
